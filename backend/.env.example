# DOER Platform - Environment Configuration
# 
# Copy this file to .env and update values as needed:
#   cp .env.example .env
#
# All settings have sensible defaults for local development.

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME="DOER Platform"
APP_VERSION="0.1.0"
DEBUG=true

# ============================================================================
# Database
# ============================================================================
# Local SQLite (default)
DATABASE_URL="sqlite+aiosqlite:///./data/doer.db"

# PRODUCTION: PostgreSQL
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/doer_db"

# ============================================================================
# JWT Authentication
# ============================================================================
# IMPORTANT: Change this in production!
JWT_SECRET_KEY="your-super-secret-key-change-in-production-use-openssl-rand-hex-32"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# File Storage
# ============================================================================
STORAGE_PROVIDER="local"
UPLOAD_DIR="./data/uploads"
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"

# PRODUCTION: AWS S3
# STORAGE_PROVIDER="s3"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="ap-south-1"
# S3_BUCKET_NAME="doer-documents"

# ============================================================================
# Redis Cache (PRODUCTION)
# ============================================================================
# REDIS_URL="redis://localhost:6379/0"

# ============================================================================
# AI Configuration
# ============================================================================
# "ollama" for local inference (free), "openai" for cloud API
AI_PROVIDER="ollama"

# Ollama Settings (local AI)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2"

# OpenAI Settings (cloud AI)
# OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_RATE_LIMIT_RPM=20

# ============================================================================
# SMS/WhatsApp (Twilio)
# ============================================================================
# Set to true to simulate SMS in console instead of sending
SMS_SIMULATION_MODE=true

# PRODUCTION: Twilio credentials
# TWILIO_ACCOUNT_SID="your-account-sid"
# TWILIO_AUTH_TOKEN="your-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
